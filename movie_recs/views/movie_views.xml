<odoo>
    <!--List view for movie model-->
    <record id="movie_list_view" model="ir.ui.view">
        <field name="name">movie.list.view</field>
        <field name="model">movie_recs.movie</field>
        <field name="arch" type="xml">
            <list string="Movies">
                <field name="title"/>
                <field name="genre"/>
                <field name="release_year"/>
                <field name="lead_actor_gender"/>
                <field name="poster_url"/>
            </list>
        </field>
    </record>
    <!--Form view for movie model-->
    <record id="movie_form_view" model="ir.ui.view">
        <field name="name">movie.form.view</field>
        <field name="model">movie_recs.movie</field>
        <field name="arch" type="xml">
            <form string="Movie">
                <sheet>
                    <group>
                        <h1><field name="title"/></h1>
                    </group>
                    <group>
                        <group>
                            <field name="genre"/>
                            <field name="release_year"/>
                        </group>
                        <group>
                            <field name="lead_actor_gender"/>
                            <field name="poster_url"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!--Kanban view for movie model-->
    <record id="movie_kanban_view" model="ir.ui.view">
        <field name="name">movie.kanban.view</field>
        <field name="model">movie_recs.movie</field>
        <field name="arch" type="xml">
            <kanban default_group_by="genre" records_draggable="false">
            <field name="title"/>
            <field name="genre"/>
            <field name="release_year"/>
            <field name="lead_actor_gender"/>
            <field name="poster_url"/>
            <templates>
                <t t-name="kanban-box">
                    <div class="oe_kanban_global_click o_kanban_card">
                        <div class="o_kanban_image">
                            <img t-att-src="record.poster_url.raw_value" t-att-alt="'Movie Poster'"/>
                        </div>
                        <div class="o_kanban_details">
                            <h4 class="o_kanban_record_title">
                                <field name="title"/>
                            </h4>
                            <div>
                                <span class="text-muted">Genre: </span>
                                <field name="genre"/>
                            </div>
                            <div>
                                <span class="text-muted">Year: </span>
                                <field name="release_year"/>
                            </div>
                            <div>
                                <span class="text-muted">Lead Actor Gender: </span>
                                <field name="lead_actor_gender"/>
                            </div>
                        </div>
                    </div>
                </t>
            </templates>
            </kanban>
        </field>
    </record>
    <!--Search view for movie model-->
    <record id="movie_search_view" model="ir.ui.view">
        <field name="name">movie.search.view</field>
        <field name="model">movie_recs.movie</field>
        <field name="arch" type="xml">
            <search string="Search movies...">
                <field name="title"/>
                <field name="genre"/>
                <field name="release_year"/>
                <field name="lead_actor_gender"/>
                <filter name="group_by_release_year" string="Release Year" context="{'group_by': 'release_year'}"/>
            </search>
        </field>
    </record>
    <!--Action for movie model-->
    <record id="display_all_movies_action" model="ir.actions.act_window">
        <field name="name">View All Movies</field>
        <field name="res_model">movie_recs.movie</field>
        <field name="view_mode">list,form,kanban</field>
    </record>
</odoo>